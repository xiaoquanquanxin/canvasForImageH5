{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es5",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015"
        ],
        "baseUrl": "src",
        "paths": {
            "@img/*": [
                "img/*"
            ],
            "@ts/*": [
                "ts/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "*.test.ts"
    ]
}